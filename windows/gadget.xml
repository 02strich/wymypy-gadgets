<?xml version="1.0" encoding="utf-8" ?>
<gadget>
    <name>WyMyPy Control</name>
    <namespace>wymypy.ctrl</namespace>
    <version>1.0.0.0</version>
    <author name="02strich">
    	<info url="http://02strich.de" text="http://02strich.de" />
        <logo src="logo.jpeg" />
    </author>
    <copyright>&#169; 2011</copyright>
    <description>Control WyMyPy from your desktop</description>
    <icons>
		<icon src="drag.png"/>
	</icons>
    <hosts>
        <host name="sidebar">
			<autoscaleDPI>true</autoscaleDPI>
			
            <base type="HTML" apiVersion="1.0.0" src="gadget.html" />
            <permissions>Full</permissions>
            <platform minPlatformVersion="1.0" />
            <defaultImage src="drag.png" />
        </host>
    </hosts>
</gadget>
